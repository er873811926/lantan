<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- INFORMATION -->
<mapper namespace="pyl.mapper.information">
    <!-- This code was generated by TableGo tools, mark 1 begin. -->
    <!-- 字段映射 -->
    <resultMap id="informationMap" type="Information">
        <id column="INFORMATION_ID" property="informationId" jdbcType="INTEGER" />
        <result column="INFORMATION_EMAIL" property="informationEmail" jdbcType="VARCHAR" />
        <result column="INFORMATION_CONTEXT" property="informationContext" jdbcType="VARCHAR" />
        <result column="POSTS_NO" property="postsNo" jdbcType="VARCHAR" />
        <result column="REPLY_ID" property="replyId" jdbcType="INTEGER" />
        <result column="INFORMER" property="informer" jdbcType="VARCHAR" />
    </resultMap>
    <!-- This code was generated by TableGo tools, mark 1 end. -->
    
    <!-- This code was generated by TableGo tools, mark 2 begin. -->
    <!-- 表所有字段 -->
    <sql id="allColumns">
        INFORMATION_ID, INFORMATION_EMAIL, INFORMATION_CONTEXT, POSTS_NO, REPLY_ID, INFORMER
    </sql>
    <!-- This code was generated by TableGo tools, mark 2 end. -->
    
    <!-- 查询所有数据 -->
    <select id="findInformationAll" resultMap="informationMap">
        SELECT
        <include refid="allColumns" />
        FROM INFORMATION
    </select>
    
    <!-- 根据条件参数查询数据列表 -->
    <select id="findInformationByCondition" resultMap="informationMap" parameterType="map">
        SELECT
        <include refid="allColumns" />
        FROM INFORMATION WHERE 1 = 1
        <if test="informationEmail != null and informationEmail != ''">
            AND INFORMATION_EMAIL LIKE CONCAT('%', #{informationEmail}, '%')
        </if>
        <if test="informationContext != null and informationContext != ''">
            AND INFORMATION_CONTEXT LIKE CONCAT('%', #{informationContext}, '%')
        </if>
        <if test="postsNo != null and postsNo != ''">
            AND POSTS_NO LIKE CONCAT('%', #{postsNo}, '%')
        </if>
        <if test="replyId != null">
            AND REPLY_ID = #{replyId}
        </if>
        <if test="informer != null and informer != ''">
            AND INFORMER LIKE CONCAT('%', #{informer}, '%')
        </if>
    </select>
    
    <!-- 根据主键查询数据 -->
    <select id="findInformationByIds" resultMap="informationMap" parameterType="list">
        SELECT
        <include refid="allColumns" />
        FROM INFORMATION WHERE INFORMATION_ID IN
        <foreach collection="list" index="index" item="informationId" open="(" separator="," close=")">
            #{informationId}
        </foreach>
    </select>
    
    <!-- 插入数据 -->
    <insert id="insertInformation" parameterType="map">
        INSERT INTO INFORMATION (
            INFORMATION_ID, INFORMATION_EMAIL, INFORMATION_CONTEXT, POSTS_NO, REPLY_ID, INFORMER
        ) VALUES (
            #{informationId},
            #{informationEmail},
            #{informationContext},
            #{postsNo},
            #{replyId},
            #{informer}
        )
    </insert>
    
    <!-- 修改数据 -->
    <update id="updateInformation" parameterType="map">
        UPDATE INFORMATION
        <set>
            <if test="informationEmail != null">
                INFORMATION_EMAIL = #{informationEmail},
            </if>
            <if test="informationContext != null">
                INFORMATION_CONTEXT = #{informationContext},
            </if>
            <if test="postsNo != null">
                POSTS_NO = #{postsNo},
            </if>
            <if test="replyId != null">
                REPLY_ID = #{replyId},
            </if>
            <if test="informer != null">
                INFORMER = #{informer}
            </if>
        </set>
        WHERE INFORMATION_ID = #{informationId}
    </update>
    
    <!-- 根据主键删除数据 -->
    <delete id="deleteInformationById" parameterType="int">
        DELETE FROM INFORMATION WHERE INFORMATION_ID = #{informationId}
    </delete>
    
</mapper>