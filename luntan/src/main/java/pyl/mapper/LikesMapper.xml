<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- LIKES -->
<mapper namespace="pyl.mapper.LikesMapper">
    <!-- This code was generated by TableGo tools, mark 1 begin. -->
    <!-- 字段映射 -->
    <resultMap id="likesMap" type="Likes">
        <id column="LIKES_ID" property="likesId" jdbcType="INTEGER" />
        <result column="REPLY_ID" property="replyId" jdbcType="INTEGER" />
        <result column="UEMAIL" property="uemail" jdbcType="VARCHAR" />
    </resultMap>
    <!-- This code was generated by TableGo tools, mark 1 end. -->
    
    <!-- This code was generated by TableGo tools, mark 2 begin. -->
    <!-- 表所有字段 -->
    <sql id="allColumns">
        LIKES_ID, REPLY_ID, UEMAIL
    </sql>
    <!-- This code was generated by TableGo tools, mark 2 end. -->
    
    <!-- 查询所有数据 -->
    <select id="findLikesAll" resultMap="likesMap">
        SELECT
        <include refid="allColumns" />
        FROM LIKES
    </select>
    
    <!-- 根据条件参数查询数据列表 -->
    <select id="findLikesByCondition" resultMap="likesMap" parameterType="map">
        SELECT
        <include refid="allColumns" />
        FROM LIKES WHERE 1 = 1
        <if test="replyId != null">
            AND REPLY_ID = #{replyId}
        </if>
        <if test="uemail != null and uemail != ''">
            AND UEMAIL LIKE CONCAT('%', #{uemail}, '%')
        </if>
    </select>
    
    <!-- 根据主键查询数据 -->
    <select id="findLikesByIds" resultMap="likesMap" parameterType="list">
        SELECT
        <include refid="allColumns" />
        FROM LIKES WHERE LIKES_ID IN
        <foreach collection="list" index="index" item="likesId" open="(" separator="," close=")">
            #{likesId}
        </foreach>
    </select>
    
    <!-- 插入数据 -->
    <insert id="insertLikes" parameterType="Likes">
        INSERT INTO LIKES (
           REPLY_ID, UEMAIL
        ) VALUES (
           
            #{replyId},
            #{uemail}
        )
    </insert>
    
    <!-- 修改数据 -->
    <update id="updateLikes" parameterType="map">
        UPDATE LIKES
        <set>
            <if test="replyId != null">
                REPLY_ID = #{replyId},
            </if>
            <if test="uemail != null">
                UEMAIL = #{uemail}
            </if>
        </set>
        WHERE REPLY_ID = #{replyId}
    </update>
    
    <!-- 根据主键删除数据 -->
    <delete id="deleteLikesById" parameterType="int">
        DELETE FROM LIKES WHERE LIKES_ID = #{likesId}
    </delete>
    
</mapper>