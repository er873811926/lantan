<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- STATISTICAL -->
<mapper namespace="pyl.mapper.statistical">
    <!-- This code was generated by TableGo tools, mark 1 begin. -->
    <!-- 字段映射 -->
    <resultMap id="statisticalMap" type="Statistical">
        <id column="STC_ID" property="stcId" jdbcType="INTEGER" />
        <result column="U_ID" property="uId" jdbcType="INTEGER" />
        <result column="U_EMAIL" property="uEmail" jdbcType="VARCHAR" />
        <result column="POSTS_SUM" property="postsSum" jdbcType="INTEGER" />
        <result column="COLLECT_SUM" property="collectSum" jdbcType="VARCHAR" />
        <result column="HOTPOSTSREPLY_SUM" property="hotpostsreplySum" jdbcType="VARCHAR" />
    </resultMap>
    <!-- This code was generated by TableGo tools, mark 1 end. -->
    
    <!-- This code was generated by TableGo tools, mark 2 begin. -->
    <!-- 表所有字段 -->
    <sql id="allColumns">
        STC_ID, U_ID, U_EMAIL, POSTS_SUM, COLLECT_SUM, HOTPOSTSREPLY_SUM
    </sql>
    <!-- This code was generated by TableGo tools, mark 2 end. -->
    
    <!-- 查询所有数据 -->
    <select id="findStatisticalAll" resultMap="statisticalMap">
        SELECT
        <include refid="allColumns" />
        FROM STATISTICAL
    </select>
    
    <!-- 根据条件参数查询数据列表 -->
    <select id="findStatisticalByCondition" resultMap="statisticalMap" parameterType="map">
        SELECT
        <include refid="allColumns" />
        FROM STATISTICAL WHERE 1 = 1
        <if test="uId != null">
            AND U_ID = #{uId}
        </if>
        <if test="uEmail != null and uEmail != ''">
            AND U_EMAIL LIKE CONCAT('%', #{uEmail}, '%')
        </if>
        <if test="postsSum != null">
            AND POSTS_SUM = #{postsSum}
        </if>
        <if test="collectSum != null">
            AND COLLECT_SUM = #{collectSum}
        </if>
        <if test="hotpostsreplySum != null">
            AND HOTPOSTSREPLY_SUM = #{hotpostsreplySum}
        </if>
    </select>
    
    <!-- 根据主键查询数据 -->
    <select id="findStatisticalByIds" resultMap="statisticalMap" parameterType="list">
        SELECT
        <include refid="allColumns" />
        FROM STATISTICAL WHERE STC_ID IN
        <foreach collection="list" index="index" item="stcId" open="(" separator="," close=")">
            #{stcId}
        </foreach>
    </select>
    
    <!-- 插入数据 -->
    <insert id="insertStatistical" parameterType="map">
        INSERT INTO STATISTICAL (
            STC_ID, U_ID, U_EMAIL, POSTS_SUM, COLLECT_SUM, HOTPOSTSREPLY_SUM
        ) VALUES (
            #{stcId},
            #{uId},
            #{uEmail},
            #{postsSum},
            #{collectSum},
            #{hotpostsreplySum}
        )
    </insert>
    
    <!-- 修改数据 -->
    <update id="updateStatistical" parameterType="map">
        UPDATE STATISTICAL
        <set>
            <if test="uId != null">
                U_ID = #{uId},
            </if>
            <if test="uEmail != null">
                U_EMAIL = #{uEmail},
            </if>
            <if test="postsSum != null">
                POSTS_SUM = #{postsSum},
            </if>
            <if test="collectSum != null">
                COLLECT_SUM = #{collectSum},
            </if>
            <if test="hotpostsreplySum != null">
                HOTPOSTSREPLY_SUM = #{hotpostsreplySum}
            </if>
        </set>
        WHERE STC_ID = #{stcId}
    </update>
    
    <!-- 根据主键删除数据 -->
    <delete id="deleteStatisticalById" parameterType="int">
        DELETE FROM STATISTICAL WHERE STC_ID = #{stcId}
    </delete>
    
</mapper>