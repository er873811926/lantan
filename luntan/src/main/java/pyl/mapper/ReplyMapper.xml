<!-- 举报数(REPLY) -->
<mapper namespace="pyl.mapper.reply">
    <!-- This code was generated by TableGo tools, mark 1 begin. -->
    <!-- 字段映射 -->
    <resultMap id="replyMap" type="Reply">
        <id column="REPLY_ID" property="replyId" jdbcType="INTEGER" />
        <result column="POSTS_NO" property="postsNo" jdbcType="VARCHAR" />
        <result column="REPLY_CONTENT" property="replyContent" jdbcType="VARCHAR" />
        <result column="U_EMAIL" property="uEmail" jdbcType="VARCHAR" />
        <result column="IP" property="ip" jdbcType="VARCHAR" />
        <result column="REPLY_TIME" property="replyTime" jdbcType="TIMESTAMP" />
        <result column="HOT" property="hot" jdbcType="VARCHAR" />
        <result column="LIKES" property="likes" jdbcType="VARCHAR" />
        <result column="TOP" property="top" jdbcType="VARCHAR" />
        <result column="BAN" property="ban" jdbcType="VARCHAR" />
    </resultMap>
    <!-- This code was generated by TableGo tools, mark 1 end. -->
    
    <!-- This code was generated by TableGo tools, mark 2 begin. -->
    <!-- 表所有字段 -->
    <sql id="allColumns">
        REPLY_ID, POSTS_NO, REPLY_CONTENT, U_EMAIL, IP, REPLY_TIME, HOT, LIKES, 
        TOP, BAN
    </sql>
    <!-- This code was generated by TableGo tools, mark 2 end. -->
    
    <!-- 查询所有数据 -->
    <select id="findReplyAll" resultMap="replyMap">
        SELECT
        <include refid="allColumns" />
        FROM REPLY
    </select>
    
    <!-- 根据条件参数查询数据列表 -->
    <select id="findReplyByCondition" resultMap="replyMap" parameterType="map">
        SELECT
        <include refid="allColumns" />
        FROM REPLY WHERE 1 = 1
        <if test="postsNo != null and postsNo != ''">
            AND POSTS_NO LIKE CONCAT('%', #{postsNo}, '%')
        </if>
        <if test="replyContent != null and replyContent != ''">
            AND REPLY_CONTENT LIKE CONCAT('%', #{replyContent}, '%')
        </if>
        <if test="uEmail != null and uEmail != ''">
            AND U_EMAIL LIKE CONCAT('%', #{uEmail}, '%')
        </if>
        <if test="ip != null and ip != ''">
            AND IP LIKE CONCAT('%', #{ip}, '%')
        </if>
        <if test="replyTime != null">
            AND REPLY_TIME = #{replyTime}
        </if>
        <if test="hot != null and hot != ''">
            AND HOT LIKE CONCAT('%', #{hot}, '%')
        </if>
        <if test="likes != null">
            AND LIKES = #{likes}
        </if>
        <if test="top != null and top != ''">
            AND TOP LIKE CONCAT('%', #{top}, '%')
        </if>
        <if test="ban != null and ban != ''">
            AND BAN LIKE CONCAT('%', #{ban}, '%')
        </if>
    </select>
    
    <!-- 根据主键查询数据 -->
    <select id="findReplyByIds" resultMap="replyMap" parameterType="list">
        SELECT
        <include refid="allColumns" />
        FROM REPLY WHERE REPLY_ID IN
        <foreach collection="list" index="index" item="replyId" open="(" separator="," close=")">
            #{replyId}
        </foreach>
    </select>
    
    <!-- 插入数据 -->
    <insert id="insertReply" parameterType="map">
        INSERT INTO REPLY (
            REPLY_ID, POSTS_NO, REPLY_CONTENT, U_EMAIL, IP, REPLY_TIME, HOT, LIKES, 
            TOP, BAN
        ) VALUES (
            #{replyId},
            #{postsNo},
            #{replyContent},
            #{uEmail},
            #{ip},
            #{replyTime},
            #{hot},
            #{likes},
            #{top},
            #{ban}
        )
    </insert>
    
    <!-- 修改数据 -->
    <update id="updateReply" parameterType="map">
        UPDATE REPLY
        <set>
            <if test="postsNo != null">
                POSTS_NO = #{postsNo},
            </if>
            <if test="replyContent != null">
                REPLY_CONTENT = #{replyContent},
            </if>
            <if test="uEmail != null">
                U_EMAIL = #{uEmail},
            </if>
            <if test="ip != null">
                IP = #{ip},
            </if>
            <if test="replyTime != null">
                REPLY_TIME = #{replyTime},
            </if>
            <if test="hot != null">
                HOT = #{hot},
            </if>
            <if test="likes != null">
                LIKES = #{likes},
            </if>
            <if test="top != null">
                TOP = #{top},
            </if>
            <if test="ban != null">
                BAN = #{ban}
            </if>
        </set>
        WHERE REPLY_ID = #{replyId}
    </update>
    
    <!-- 根据主键删除数据 -->
    <delete id="deleteReplyById" parameterType="int">
        DELETE FROM REPLY WHERE REPLY_ID = #{replyId}
    </delete>
    
