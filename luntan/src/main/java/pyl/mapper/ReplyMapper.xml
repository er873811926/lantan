<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 举报数(REPLY) -->
<mapper namespace="pyl.mapper.ReplyMapper">
    <!-- This code was generated by TableGo tools, mark 1 begin. -->
    <!-- 字段映射 -->
    <resultMap id="replyMap" type="Reply">
        <id column="REPLY_ID" property="replyId" jdbcType="INTEGER" />
        <result column="POSTS_NO" property="postsNo" jdbcType="VARCHAR" />
        <result column="REPLY_CONTENT" property="replyContent" jdbcType="VARCHAR" />
        <result column="UEMAIL" property="uemail" jdbcType="VARCHAR" />
        <result column="IP" property="ip" jdbcType="VARCHAR" />
        <result column="REPLY_TIME" property="replyTime" jdbcType="VARCHAR" />
        <result column="HOT" property="hot" jdbcType="VARCHAR" />
        <result column="LIKES" property="likes" jdbcType="VARCHAR" />
        <result column="TOP" property="top" jdbcType="VARCHAR" />
        <result column="BAN" property="ban" jdbcType="VARCHAR" />
        <result column="POSTS_TITLE" property="postsTitle" jdbcType="VARCHAR" />
        <result column="UNICKNAME" property="unickname" jdbcType="VARCHAR" />
    </resultMap>
    <!-- This code was generated by TableGo tools, mark 1 end. -->
    
    <!-- This code was generated by TableGo tools, mark 2 begin. -->
    <!-- 表所有字段 -->
    <sql id="allColumns">
        REPLY_ID, POSTS_NO, REPLY_CONTENT, UEMAIL, IP, REPLY_TIME, HOT, LIKES, 
        TOP, BAN,POSTS_TITLE,UNICKNAME
    </sql>
    <!-- This code was generated by TableGo tools, mark 2 end. -->
    
    <!-- 查询所有数据 -->
    <select id="findReplyAll" resultMap="replyMap">
        SELECT
        <include refid="allColumns" />
        FROM REPLY
    </select>
    
    <!-- 根据条件参数查询数据列表 -->
    <select id="findReplyByCondition" resultMap="replyMap" parameterType="map">
        SELECT
        <include refid="allColumns" />
        FROM REPLY WHERE 1 = 1
        <if test="postsNo != null and postsNo != ''">
            AND POSTS_NO LIKE CONCAT('%', #{postsNo}, '%')
        </if>
        <if test="replyContent != null and replyContent != ''">
            AND REPLY_CONTENT LIKE CONCAT('%', #{replyContent}, '%')
        </if>
        <if test="uemail != null and uemail != ''">
            AND UEMAIL LIKE CONCAT('%', #{uemail}, '%')
        </if>
        <if test="ip != null and ip != ''">
            AND IP LIKE CONCAT('%', #{ip}, '%')
        </if>
        <if test="replyTime != null">
            AND REPLY_TIME = #{replyTime}
        </if>
        <if test="hot != null and hot != ''">
            AND HOT LIKE CONCAT('%', #{hot}, '%')
        </if>
        <if test="likes != null">
            AND LIKES = #{likes}
        </if>
        <if test="top != null and top != ''">
            AND TOP LIKE CONCAT('%', #{top}, '%')
        </if>
        <if test="ban != null and ban != ''">
            AND BAN LIKE CONCAT('%', #{ban}, '%')
        </if>
        <if test="postsTitle != null and postsTitle != ''">
            AND POSTS_TITLE LIKE CONCAT('%', #{postsTitle}, '%')
        </if>
        <if test="unickname != null and unickname != ''">
            AND UNICKNAME LIKE CONCAT('%', #{unickname}, '%')
        </if>
       <!--  倒叙 -->
        <if test="desc!=null ">
			order by REPLY_ID desc 
		</if>
        <if test="currentPage!=null and pageSize!=null">
			limit #{currentPage},#{pageSize}
		</if>
    </select>
    
    <!-- 根据主键查询数据 -->
    <select id="findReplyByIds" resultMap="replyMap" parameterType="list">
        SELECT
        <include refid="allColumns" />
        FROM REPLY WHERE REPLY_ID IN
        <foreach collection="list" index="index" item="replyId" open="(" separator="," close=")">
            #{replyId}
        </foreach>
    </select>
    
    <!-- 查询回帖最多的用户和帖子数 -->
    <select id="findReplyNumEmailMax" resultType="ReplyNumEmailMax" parameterType="map">
        SELECT COUNT(UEMAIL)as num,UEMAIL from REPLY  GROUP BY UEMAIL 
        <!--  倒叙 -->
        <if test="desc!=null ">
			ORDER BY COUNT(UEMAIL) DESC
		</if>
        <if test="pageSize!=null">
			limit #{pageSize}
		</if>
    </select>
    
    <!-- 查询该帖子所有的回帖总数 -->
    <select id="findReplyMaxNum" resultType="_int" parameterType="map">
        SELECT COUNT(POSTS_NO) FROM REPLY WHERE 1=1
        <if test="postsNo != null and postsNo != ''">
            AND POSTS_NO = #{postsNo}
        </if>
    </select>
    
    <!-- 插入数据 -->
    <insert id="insertReply" parameterType="Reply">
        INSERT INTO REPLY (
            POSTS_NO, REPLY_CONTENT, UEMAIL, IP, REPLY_TIME,  
      POSTS_TITLE,UNICKNAME
        ) VALUES (
            #{postsNo},
            #{replyContent},
            #{uemail},
            #{ip},
            #{replyTime},
            #{postsTitle},
            #{unickname}
        )
    </insert>
    
    <!-- 修改数据 -->
    <update id="updateReply" parameterType="map">
        UPDATE REPLY
        <set>
            <if test="postsNo != null">
                POSTS_NO = #{postsNo},
            </if>
            <if test="replyContent != null">
                REPLY_CONTENT = #{replyContent},
            </if>
           
            <if test="ip != null">
                IP = #{ip},
            </if>
            <if test="replyTime != null">
                REPLY_TIME = #{replyTime},
            </if>
            <if test="hot != null">
                HOT = #{hot},
            </if>
            <if test="likes != null">
                LIKES = #{likes},
            </if>
            <if test="top != null">
                TOP = #{top},
            </if>
            <if test="ban != null">
                BAN = #{ban}
            </if>
            <if test="postsTitle != null">
                POSTS_TITLE = #{postsTitle}
            </if>
            <if test="unickname != null">
                UNICKNAME = #{unickname}
            </if>
        </set>
        WHERE UEMAIL = #{uemail}
    </update>
    
    <!-- 根据主键删除数据 -->
    <delete id="deleteReplyById" parameterType="int">
        DELETE FROM REPLY WHERE REPLY_ID = #{replyId}
    </delete>
    
</mapper>