    <!-- 表所有字段 -->
    <sql id="allColumns">
        MESSAGE_ID, UID, UEMAIL, POSTS_NO, POSTS_TITLE, OTHER_UEMAIL, MESSAGE_CONTENT, TYPE,OTHER_UNICKNAME,TIME
    </sql>
