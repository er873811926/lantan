    <!-- 查询所有数据 -->
    <select id="findUserMessageAll" resultMap="userMessageMap">
        SELECT
        <include refid="allColumns" />
        FROM USER_MESSAGE
    </select>
    
    <!-- 根据条件参数查询数据列表 -->
    <select id="findUserMessageByCondition" resultMap="userMessageMap" parameterType="map">
        SELECT
        <include refid="allColumns" />
        FROM USER_MESSAGE WHERE 1 = 1
        <if test="uid != null">
            AND UID = #{uid}
        </if>
        <if test="uemail != null and uemail != ''">
            AND UEMAIL=#{uemail}
        </if>
        <if test="postsNo != null and postsNo != ''">
            AND POSTS_NO LIKE CONCAT('%', #{postsNo}, '%')
        </if>
        <if test="postsTitle != null and postsTitle != ''">
            AND POSTS_TITLE LIKE CONCAT('%', #{postsTitle}, '%')
        </if>
        <if test="otherUemail != null and otherUemail != ''">
            AND OTHER_UEMAIL LIKE CONCAT('%', #{otherUemail}, '%')
        </if>
        <if test="messageContent != null and messageContent != ''">
            AND MESSAGE_CONTENT LIKE CONCAT('%', #{messageContent}, '%')
        </if>
        <if test="type != null and type != ''">
            AND TYPE LIKE CONCAT('%', #{type}, '%')
        </if>
        <if test="otherUnickname != null and otherUnickname != ''">
            AND OTHER_UNICKNAME LIKE CONCAT('%', #{otherUnickname}, '%')
        </if>
        <if test="time != null and time != ''">
            AND time LIKE CONCAT('%', #{time}, '%')
        </if>
        <!--  倒叙 -->
        <if test="desc!=null ">
			order by MESSAGE_ID desc 
		</if>
        <if test="currentPage!=null and pageSize!=null">
			limit #{currentPage},#{pageSize}
		</if>
    </select>
    
    <!-- 根据主键查询数据 -->
    <select id="findUserMessageByIds" resultMap="userMessageMap" parameterType="list">
        SELECT
        <include refid="allColumns" />
        FROM USER_MESSAGE WHERE MESSAGE_ID IN
        <foreach collection="list" index="index" item="messageId" open="(" separator="," close=")">
            #{messageId}
        </foreach>
    </select>
    
    <!-- 查询该用户消息总数 -->
    <select id="findUserMessageMaxNum" resultType="_int" parameterType="map">
        SELECT COUNT(uemail) FROM REPLY WHERE 1=1
        <if test="uemail != null and uemail != ''">
            AND uemail = #{uemail}
        </if>
    </select>
    
    
    <!-- 插入数据 -->
    <insert id="insertUserMessage" parameterType="UserMessage">
        INSERT INTO USER_MESSAGE (
             UID, UEMAIL, POSTS_NO, POSTS_TITLE, OTHER_UEMAIL, MESSAGE_CONTENT, TYPE,OTHER_UNICKNAME,TIME
        ) VALUES (
            
            #{uid},
            #{uemail},
            #{postsNo},
            #{postsTitle},
            #{otherUemail},
            #{messageContent},
            #{type},
            #{otherUnickname},
            #{time}
        )
    </insert>
    
    <!-- 修改数据 -->
    <update id="updateUserMessage" parameterType="map">
        UPDATE USER_MESSAGE
        <set>
            <if test="uid != null">
                UID = #{uid},
            </if>
            <if test="uemail != null">
                UEMAIL = #{uemail},
            </if>
            <if test="postsNo != null">
                POSTS_NO = #{postsNo},
            </if>
            <if test="postsTitle != null">
                POSTS_TITLE = #{postsTitle},
            </if>
            <if test="otherUemail != null">
                OTHER_UEMAIL = #{otherUemail},
            </if>
            <if test="messageContent != null">
                MESSAGE_CONTENT = #{messageContent},
            </if>
            <if test="type != null">
                TYPE = #{type}
            </if>
            <if test="otherUnickname != null">
                OTHER_UNICKNAME = #{otherUnickname}
            </if>
            <if test="time != null">
                time = #{time}
            </if>
        </set>
        WHERE MESSAGE_ID = #{messageId}
    </update>
    
    <!-- 根据主键删除数据 -->
    <delete id="deleteUserMessageById" parameterType="int">
        DELETE FROM USER_MESSAGE WHERE MESSAGE_ID = #{messageId}
    </delete>
    
