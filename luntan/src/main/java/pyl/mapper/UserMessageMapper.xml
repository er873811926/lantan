        <result column="UEMAIL" property="uemail" jdbcType="VARCHAR" />
        <result column="POSTS_NO" property="postsNo" jdbcType="VARCHAR" />
        <result column="POSTS_TITLE" property="postsTitle" jdbcType="VARCHAR" />
        <result column="OTHER_UEMAIL" property="otherUemail" jdbcType="VARCHAR" />
        <result column="MESSAGE_CONTENT" property="messageContent" jdbcType="VARCHAR" />
        <result column="TYPE" property="type" jdbcType="VARCHAR" />
        <result column="OTHER_UNICKNAME" property="otherUnickname" jdbcType="VARCHAR" />
        <result column="TIME" property="time" jdbcType="VARCHAR" />
    </resultMap>
    <!-- This code was generated by TableGo tools, mark 1 end. -->
    
